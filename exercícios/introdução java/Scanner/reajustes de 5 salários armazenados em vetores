package javaapplication6;

import java.util.Scanner;

/**
 *
 * @author marbi
 */
public class JavaApplication6 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        Scanner leia = new Scanner (System.in);
        double sal [] = new double[5];
            for(int i=0; i<5; i++ ){
                System.out.println("Qual o valor do seu salario: "); 
                sal[i] = leia.nextDouble();
            }
        
        System.out.println("\nQual sera o valor do reajuste?");
        double reaj = leia.nextDouble();
        
            for(int i=0; i<5; i++ ){
                System.out.println("Seu salario reajustado e: R$" + (sal[i] + reaj));
            }
    }
}
